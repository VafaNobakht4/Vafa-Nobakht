<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block head_css %}
            {% block stylesheets %}
                {{ encore_entry_link_tags('app') }}
            {% endblock %}
        {% endblock %}

        {% block head_js %}
            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-inverse bg-black d-flex">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Vafa's Company</a>
                    </div>
                    <ul class="nav navbar-nav navbar-right d-flex">
                        <li class="bg-white rounded-1"><a href="{{ path('app_register') }}"><span class="glyphicon glyphicon-user"></span>Register</a></li>
                        <li class="bg-white rounded-1"><a href="{{ path('app_login') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    </ul>
                </div>
            </nav>
            {{ knp_menu_render('main') }}

            {% block body %}

            {% endblock %}
        </div>
    </body>
</html>